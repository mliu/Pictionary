<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pictionary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
<application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.pictionary.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pictionary.DrawActivity"
            android:label="@string/title_activity_draw" >
        </activity>
        <activity
            android:name="com.example.pictionary.GuessActivity"
            android:label="@string/title_activity_guess" >
        </activity>
        <activity
            android:name="com.example.pictionary.ScoreUpdateActivity"
            android:label="@string/title_activity_score_update" >
        </activity>
        <activity
            android:name="com.example.pictionary.StartGuessDialog"
            android:label="@string/title_activity_start_guess_dialog" >
        </activity>
    </application>

</manifest>
